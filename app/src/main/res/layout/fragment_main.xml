<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food 1 Temperature"
        android:id="@+id/textView"
        android:layout_below="@+id/chart1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food 2 Temperature"
        android:id="@+id/textView2"
        android:layout_below="@+id/chart1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temp "
        android:id="@+id/textView_food1temp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temp "
        android:id="@+id/textView_food2temp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Temperature"
        android:id="@+id/textView3"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView_food1temp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Temp"
        android:id="@+id/textView_targetTemp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Target Temp"
        android:id="@+id/button_setTemp"
        android:layout_below="@+id/textView_targetTemp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status"
        android:id="@+id/textView5"
        android:layout_above="@+id/button_setTimer"
        android:layout_alignStart="@+id/textView_currentGrillTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Not Connected "
        android:id="@+id/textView_currentStatus"
        android:textColor="#ff0000"
        android:layout_alignTop="@+id/button_setTimer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Timer"
        android:id="@+id/button_setTimer"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_setTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Grill Temp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/textView_currentGrillTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temp"
        android:id="@+id/textView_currentGrillTemp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView_food2temp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Timer is Set"
        android:id="@+id/textView_timerStatus"
        android:textColor="#ff0000"
        android:layout_alignBottom="@+id/button_setTimer"
        android:layout_alignStart="@+id/textView_currentStatus" />

    <!--<ListView-->
